<% @tags.each do |tag| %>
  <div>
    <p><%= tag.name %></p>
    <p><%= link_to "Edit", edit_admins_tag_path(tag.id) %></p>
    <p><%= link_to "Destroy", admins_tag_path(tag), method: :delete,"data-confirm" => "本当に削しますか？" %></p>
  </div>
<% end %>

<%= form_with model: [:admins, @tag] do |f| %>
  <h4>タグ名</h4>
  <%= f.text_field :name %>
  <%= f.submit '投稿' %>
<% end %>
