<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h1>タグ一覧</h1>
        <%= form_with model: [:admins, @tag] do |f| %>
          <h4>タグ名</h4>
          <%= f.text_field :name %>
          <%= f.submit '投稿', class: "btn btn-primary" %>
        <% end %>
        <table class="table">
          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <td>
                  <%= tag.name %>
                </td>
                <td>
                  <%= link_to "編集する", edit_admins_tag_path(tag.id), class:"btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "削除する", admins_tag_path(tag), method: :delete,"data-confirm" => "本当に削しますか？",class:"btn btn-sm btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>