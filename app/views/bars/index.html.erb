<h1>Bar一覧</h1>
<% @bars.each do |bar| %>
  <div>
    <p>タイトル：<%= link_to bar.name, bar_path(bar.id) %></p>
    <p>タグ<%= bar.tags.pluck(:name).join("") %></p>
  </div>
<% end %>

<div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['Comment'], ['Bar'],['Tag']]) %>
      <%= f.select :search, options_for_select([["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
</div>