<div>
  <h1><%= @comment.bar.name %></h1>
  <h3><%= @comment.bar.address %></h3>
  <p>タイトル:<%= @comment.title %></p>
  <p>コメント:<%= @comment.content %></p>

  <p>評価 :<%= @comment.star%>点</p>
    <div id="show_star-<%= @comment.id %>"></div>
    <script>
      var elem = document.querySelector('#show_star-<%= @comment.id %>');
      var opt = {
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        half      : '<%= asset_path('star-half.png') %>',
        readOnly  : true,
        score     : <%= @comment.star %>
        };
      raty(elem,opt);
    </script>
    </div>
    <% if @user == current_user %>
       <%= link_to "削除する", comment_path(@comment), method: :delete,class:"btn btn-sm btn-danger" %>
       <%= link_to '編集する', edit_comment_path, class:"btn btn-sm btn-success" %>
    <% end %>
  <p>投稿日：<%= @comment.created_at.strftime('%Y/%m/%d') %></p>
</div>