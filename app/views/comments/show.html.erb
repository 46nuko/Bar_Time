<div>
  <p>BAR名：<%= @comment.bar.name %></p>
  <p>コメント<%= @comment.content %></p>
  <p><%= link_to '投稿する', new_comment_path %></p>
  <p>住所 : <%= @comment.bar.address %></p>
  <p>評価 :<%= @comment.star%>点</p>
    <div id="star-rate<%= @comment.id%>"></div>
    <script>
      $('#star-rate<%= @comment.id%>').raty({
        size      : 36,
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        half      : false,
        readOnly: true,
        score: <%= @comment.star %>,
      });
    </script>
  </div>
  <p>投稿日：<%= @comment.created_at.strftime('%Y/%m/%d') %></p>
</div>