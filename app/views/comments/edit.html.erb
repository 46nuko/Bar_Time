<%= form_with model: @comment do |f| %>
  <label for="inputTitle">タイトル</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
  <label for="inputContent">コメント</label>
  <%= f.text_field :content, autofocus: true, id:"inputContent", placeholder:"コメント"%>
  <%= f.submit "変更を保存" %>
<% end %>