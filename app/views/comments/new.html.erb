<h1>投稿フォーム</h1>
<%= form_with model: @comment do |f| %>
  <h4>bar名</h4>
  <%= f.collection_select :bar_id, Bar.all, :id, :name, include_blank: "選択して下さい" %>
  <h4>タグ</h4>
  <%= f.collection_select :tag_id, Tag.all, :id, :name, include_blank: "選択して下さい" %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>内容</h4>
  <%= f.text_area :content %>
  <%= f.submit '投稿' %>
<% end %>