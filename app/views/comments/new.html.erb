<h1>投稿フォーム</h1>
<%= form_with model: @comment do |f| %>
  <h4>bar名</h4>
    <%= f.collection_select :bar_id, Bar.all, :id, :name, include_blank: "選択して下さい" %>
  <h4>タグ</h4>
    <%= f.collection_select :tag_id, Tag.all, :id, :name, include_blank: "選択して下さい" %>
  <h4>タイトル</h4>
    <%= f.text_field :title %>
  <h4>内容</h4>
    <%= f.text_area :content %>
    <%= f.submit '投稿',class:"btn btn-success" %>
  <div class="form-group row" id="star">
    <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :star, id: :review_star %>
　</div>
  <div class="form-group position-static">
    <div id="post_raty"></div>
      <script>
          var elem = document.querySelector('#post_raty');
          var opt = {
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            half      : '<%= asset_path('star-half.png') %>',
            readOnly  : false,
          };
          raty(elem,opt);
      </script>
  </div>
<% end %>
<%= link_to "戻る", bars_path %>