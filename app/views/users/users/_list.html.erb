<table class="table">
  <tbody>
    <tr>
      <th>BAR名</th>
      <th>住所</th>
      <th>タイトル</th>
      <th>コメント</th>
      <th>投稿日</th>
    </tr>
    <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= comment.bar.name %>
        </td>
        <td>
          <%= comment.bar.address %>
        </td>
        <td>
          <%= comment.title %>
        </td>
        <td>
          <%= comment.content %>
        </td>
        <td>
          <%= comment.created_at.strftime('%Y/%m/%d') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>